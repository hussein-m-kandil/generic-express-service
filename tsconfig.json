{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES2017",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./prisma/seed/**/*"],
  "exclude": ["./prisma/client", "node_modules"]
}
